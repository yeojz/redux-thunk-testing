{
  "name": "redux-standard-async",
  "version": "0.0.0",
  "description": ":nut_and_bolt: A pattern for async thunk actions with testing utilities",
  "main": "./index.js",
  "scripts": {
    "build": "./scripts/build.sh",
    "build:code": "babel src --out-dir build --extensions '.ts' --ignore '**/*.test.ts'",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf build coverage",
    "lint:js": "eslint 'src/**/**?(.spec|).js'",
    "lint:ts": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yeojz/redux-standard-async.git"
  },
  "keywords": [
    "testing",
    "functional",
    "unit",
    "async",
    "middleware",
    "redux",
    "fsa",
    "promises",
    "actions",
    "payload"
  ],
  "author": "Gerald Yeo <contact@fusedthought.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yeojz/redux-standard-async/issues"
  },
  "homepage": "https://github.com/yeojz/redux-standard-async#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.9",
    "babel-jest": "^24.1.0",
    "eslint": "^5.15.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "redux": "^4.0.1",
    "rimraf": "^2.6.3",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "moduleDirectories": [
      "./node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  }
}
